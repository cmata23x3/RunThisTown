
<div class = "container" style = "margin-top: 60px;"> 
  <legend style = "border-color: grey"><h2>Edit <%= resource_name.to_s.humanize %></h2></legend>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true}) do |f| %>
    <%= devise_error_messages! %>

    <div style = "margin: 10px;"><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true , :class => "userInput", :placeholder => "Email" %></div>

    <div style = "margin: 10px;"><%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name , :class => "userInput", :placeholder => "First name" %></div>

    <div style = "margin: 10px;"><%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, :class => "userInput", :placeholder => "Last name" %></div>

      <div style = "margin: 10px;"><%= f.label :age, class: "form-label" %>
    <%= f.text_field :age , :class => "userInput", :placeholder => "Age" %></div>

    <div style = "margin: 10px;"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, :autocomplete => "off" , :class => "userInput", :placeholder => "New Password" %></div>

    <div style = "margin: 10px;"><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation , :class => "userInput", :placeholder => "New Password" %></div>

    <div style = "margin: 10px;"><%= f.label :weight %><i>(in lbs)</i>
      <%= f.text_field :weight , :class => "userInput", :placeholder => "Weight in lbs"  %>
    </div>


    <div style = "margin: 10px"><%= f.label :change_picture %> <i>(Max: 5 mb, must be .png or .jpg, square photos work best)</i>
    <%= f.file_field :avatar %></div>

    <div style = "margin: 10px;  margin-top: 30px; padding-top: 30px; border: 1px solid transparent; border-top-color: grey;"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password , :class => "userInput", :placeholder => "Current Password", :id => "currentPasswordEdit" %></div>

    

    <div style = "margin: 10px;"><%= f.submit "Update" , :class => "btn btn-warning", :id => "updateProfBtn" %></div>
  <% end %>

  <legend style = "border-color: grey"><h3>Cancel my account</h3></legend>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

  <%= link_to "Back", :back %>
</div>